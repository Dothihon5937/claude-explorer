{
  "name": "claude-explorer",
  "version": "1.0.0",
  "description": "Parser, viewer, and context extractor for Claude.ai export data",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-public",
    "copy-public": "node -e \"require('fs').cpSync('src/web/public', 'dist/web/public', {recursive: true})\"",
    "dev": "tsc --watch",
    "cli": "node dist/cli/index.js",
    "chat": "node dist/cli/agent.js",
    "login": "node dist/cli/login.js",
    "web": "node dist/web/server.js",
    "test": "echo \"Tests coming soon\" && exit 0",
    "start": "npm run web"
  },
  "bin": {
    "claude-explorer": "./dist/cli/index.js"
  },
  "keywords": [
    "claude",
    "ai",
    "export",
    "parser",
    "search"
  ],
  "author": "Paul Short",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "express": "^4.18.2",
    "fuse.js": "^7.0.0",
    "lunr": "^2.3.9",
    "marked": "^12.0.0",
    "multer": "^2.0.2",
    "open": "^10.0.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.2",
    "@types/express": "^4.17.21",
    "@types/lunr": "^2.3.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
